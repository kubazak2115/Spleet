<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.geometry.Insets?>
        <?import javafx.scene.chart.PieChart?>
        <?import javafx.scene.control.ChoiceBox?>
        <?import javafx.scene.control.DatePicker?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.control.Menu?>
        <?import javafx.scene.control.MenuBar?>
        <?import javafx.scene.control.MenuItem?>
        <?import javafx.scene.control.ScrollPane?>
        <?import javafx.scene.control.Separator?>
        <?import javafx.scene.control.SplitPane?>
        <?import javafx.scene.control.TableColumn?>
        <?import javafx.scene.control.TableView?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.layout.AnchorPane?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.layout.Pane?>
        <?import javafx.scene.layout.VBox?>
        <?import javafx.scene.paint.Color?>
        <?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/javafx/17.0.12" fx:controller="Not_in_use.HelloController">
<children>
    <!-- MenuBar -->
    <MenuBar VBox.vgrow="NEVER">
        <menus>
            <Menu mnemonicParsing="false" text="User">
                <items>
                    <MenuItem mnemonicParsing="false" text="New" />
                    <MenuItem mnemonicParsing="false" text="Open…" />
                    <MenuItem mnemonicParsing="false" text="Close" />
                    <MenuItem mnemonicParsing="false" text="Save" />
                    <MenuItem mnemonicParsing="false" text="Quit" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <items>
                    <MenuItem mnemonicParsing="false" text="Undo" />
                    <MenuItem mnemonicParsing="false" text="Redo" />
                    <MenuItem mnemonicParsing="false" text="Cut" />
                    <MenuItem mnemonicParsing="false" text="Copy" />
                    <MenuItem mnemonicParsing="false" text="Paste" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <items>
                    <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <!-- Główna część aplikacji -->
    <SplitPane dividerPositions="0.3" VBox.vgrow="ALWAYS">
        <items>
            <!-- Lewa część: Formularz i wykres -->
            <AnchorPane>
                <children>
                    <VBox spacing="10" padding="10" prefHeight="600.0" prefWidth="270.0">
                        <children>
                            <TextField fx:id="fieldName" promptText="Podaj Nazwę" />
                            <Separator />
                            <TextField fx:id="fieldAmount" promptText="Podaj Kwotę" />
                            <Separator />
                            <DatePicker fx:id="fieldDate" promptText="Wybierz Datę" />
                            <Separator />
                            <ChoiceBox fx:id="choiceCategory" />
                            <Separator />
                            <ChoiceBox fx:id="choiceType" />
                            <Separator />
                            <PieChart fx:id="pieChart" title="Wydatki" prefHeight="200.0" prefWidth="270.0" />
                        </children>
                    </VBox>
                </children>
            </AnchorPane>

            <!-- Prawa część: Tabela -->
            <ScrollPane>
                <content>
                    <AnchorPane>
                        <children>
                            <TableView fx:id="tableView" prefHeight="600.0" prefWidth="630.0">
                                <columns>
                                    <TableColumn fx:id="columnId" text="ID" prefWidth="50.0" />
                                    <TableColumn fx:id="columnData" text="Data" prefWidth="150.0" />
                                    <TableColumn fx:id="columnKategoria" text="Kategoria" prefWidth="200.0" />
                                    <TableColumn fx:id="columnWydatek" text="Wydatek" prefWidth="150.0" />
                                </columns>
                            </TableView>
                        </children>
                    </AnchorPane>
                </content>
            </ScrollPane>
        </items>
    </SplitPane>

    <!-- Status bar -->
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
        <children>
            <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Left status" HBox.hgrow="ALWAYS">
                <font>
                    <Font size="11.0" />
                </font>
                <textFill>
                    <Color red="0.625" green="0.625" blue="0.625" />
                </textFill>
            </Label>
            <Pane prefHeight="33.0" prefWidth="775.0" HBox.hgrow="ALWAYS" />
            <Label maxWidth="-1.0" text="Right status"  HBox.hgrow="NEVER" />
        </children>
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
        </padding>
    </HBox>
</children>
</VBox>